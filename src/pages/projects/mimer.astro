---
// mimer.astro - MIMER Project Page with Tabs
import BaseLayout from '../../layouts/BaseLayout.astro';

const project = {
  title: 'MIMER — Mitigating Presentation Attacks in Remote Identity Proofing',
  tagline: 'Pakistan in Focus: Securing Digital Identity Through AI',
  description: 'Advanced AI-driven solutions to detect and prevent presentation attacks in remote identity verification systems.',
  status: 'Active',
  tags: ['Digital Identity', 'AI Security', 'Biometrics', 'Pakistan', 'Cybersecurity'],
};
---

<BaseLayout title={project.title} description={project.description}>

  <section class="pt-8 lg:pt-16">
    <!-- Back Button -->
    <a
      href="/projects"
      class="inline-flex items-center gap-2 text-text-secondary hover:text-accent-yellow
             transition-colors mb-8"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Projects
    </a>

    <!-- Project Header -->
    <div class="mb-8">
      <div class="flex flex-wrap gap-2 mb-4">
        {project.tags.map((tag) => (
          <span class="px-3 py-1 bg-accent-yellow/10 text-accent-yellow rounded-full text-sm">
            {tag}
          </span>
        ))}
      </div>

      <h1 class="text-3xl lg:text-5xl font-light mb-2">
        {project.title}
      </h1>

      <p class="text-xl text-accent-yellow mb-6">
        {project.tagline}
      </p>

      <div class="flex flex-wrap items-center gap-4 text-text-secondary">
        <span class="px-3 py-1 rounded-full text-sm font-medium bg-green-500/20 text-green-400">
          {project.status}
        </span>
      </div>
    </div>

    <!-- Project Cover Image -->
    <div class="mb-12 rounded-2xl overflow-hidden bg-dark-700 aspect-video flex items-center justify-center border border-dark-500/30">
      <img
        src="/images/projects/mimer_cp.png"
        alt="MIMER Project"
        class="w-full h-full object-cover"
        onerror="this.style.display='none'; this.parentElement.innerHTML='<div class=\'w-full h-full flex items-center justify-center bg-gradient-to-br from-cyan-500/10 to-emerald-500/10\'><div class=\'text-center p-8\'><svg class=\'w-20 h-20 text-cyan-400 mx-auto mb-4\' fill=\'none\' stroke=\'currentColor\' viewBox=\'0 0 24 24\'><path stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'1\' d=\'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z\' /></svg><p class=\'text-text-muted\'>MIMER - Securing Digital Identity Through AI</p></div></div>'"
      />
    </div>

    <!-- Tab Navigation -->
    <div class="mb-8 border-b border-dark-500/30">
      <div class="flex gap-1 overflow-x-auto">
        <button
          class="tab-btn active px-6 py-3 text-sm font-medium transition-all whitespace-nowrap"
          data-tab="overview"
        >
          Overview
        </button>
        <button
          class="tab-btn px-6 py-3 text-sm font-medium transition-all whitespace-nowrap"
          data-tab="team"
        >
          Team & Partners
        </button>
        <button
          class="tab-btn px-6 py-3 text-sm font-medium transition-all whitespace-nowrap"
          data-tab="activities"
        >
          Activities & Innovation
        </button>
        <button
          class="tab-btn px-6 py-3 text-sm font-medium transition-all whitespace-nowrap"
          data-tab="outputs"
        >
          Outputs & Impact
        </button>
        <button
          class="tab-btn px-6 py-3 text-sm font-medium transition-all whitespace-nowrap"
          data-tab="resources"
        >
          Resources
        </button>
      </div>
    </div>

    <!-- Tab Content Container -->
    <div class="tab-content-container">

      <!-- OVERVIEW TAB -->
      <div id="overview-tab" class="tab-content active">

        <!-- Project Header Stats -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-3 mb-10">
          <div class="bg-dark-700 rounded-lg p-4 border border-dark-500/30">
            <div class="text-xs text-text-muted mb-1">Funding</div>
            <div class="text-sm font-medium text-accent-yellow">EPSRC International</div>
          </div>
          <div class="bg-dark-700 rounded-lg p-4 border border-dark-500/30">
            <div class="text-xs text-text-muted mb-1">Award Reference</div>
            <div class="text-sm font-medium text-text-primary">EP/Y002288/1</div>
          </div>
          <div class="bg-dark-700 rounded-lg p-4 border border-dark-500/30">
            <div class="text-xs text-text-muted mb-1">Duration</div>
            <div class="text-sm font-medium text-text-primary">2024-2026</div>
          </div>
          <div class="bg-dark-700 rounded-lg p-4 border border-dark-500/30">
            <div class="text-xs text-text-muted mb-1">Value</div>
            <div class="text-sm font-medium text-accent-yellow">£200,000</div>
          </div>
          <div class="bg-dark-700 rounded-lg p-4 border border-dark-500/30">
            <div class="text-xs text-text-muted mb-1">Partner Country</div>
            <div class="text-sm font-medium text-text-primary">Pakistan</div>
          </div>
          <div class="bg-dark-700 rounded-lg p-4 border border-dark-500/30">
            <div class="text-xs text-text-muted mb-1">Industry Partner</div>
            <div class="text-sm font-medium text-text-primary">Stech.ai</div>
          </div>
        </div>

        <!-- The Challenge -->
        <div class="mb-10">
          <h2 class="text-2xl font-medium mb-4">The Challenge</h2>
          <div class="space-y-4 text-text-secondary leading-relaxed">
            <p>
              The shift towards digital channels for financial transactions due to the COVID-19 pandemic has led to an increase in fraudulent financial transactions in low-middle-income countries like Pakistan due to weak remote identity proofing (RIDP) processes. According to Pakistan's Federal Investigation Authority, 25% of crimes reported in 2021 were electronic financial fraud, with identity spoofing scams topping the list.
            </p>
            <p>
              The existing methods of verifying a person's identity through electronic means, such as facial recognition, can be easily deceived by advancements in artificial intelligence — particularly deepfakes. A 2022 study revealed that nine out of ten liveness tests employed by banks are highly susceptible to deepfake attacks. These sophisticated forgeries are much more successful in bypassing verification processes than traditional methods.
            </p>
            <p>
              The lack of trust among users in Pakistan — where cash is still widely used — in adopting mobile technologies for banking services hinders the government's efforts to increase financial and digital inclusion for 100 million underbanked individuals. This undermines Pakistan's National Financial Inclusion Strategy (NFIS) to reduce poverty (UN SDG 1) and foster inclusive economic growth (UN SDG 8).
            </p>
          </div>
        </div>

        <!-- The Solution -->
        <div class="mb-10">
          <h2 class="text-2xl font-medium mb-4">The Solution: MIMER Project</h2>
          <p class="text-text-secondary leading-relaxed mb-4">
            MIMER develops a robust authentication method to protect remote identity verification systems from emerging identity spoofing attacks through:
          </p>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-2 flex-shrink-0"></span>
              <span class="text-text-secondary"><strong class="text-text-primary">Bimodal Authentication</strong> — Combining audio and visual biometrics for robust verification resistant to single-mode attacks</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-2 flex-shrink-0"></span>
              <span class="text-text-secondary"><strong class="text-text-primary">Multilingual Corpus Development</strong> — First Urdu-language anti-spoofing dataset tailored to Pakistan's linguistic context</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-2 flex-shrink-0"></span>
              <span class="text-text-secondary"><strong class="text-text-primary">Advanced Detection Models</strong> — AI algorithms detecting audio-video forgeries, deepfakes, and multi-spoofing attacks</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-2 flex-shrink-0"></span>
              <span class="text-text-secondary"><strong class="text-text-primary">Federated Learning</strong> — Privacy-preserving on-device processing reducing data transfer costs and environmental impact</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-2 flex-shrink-0"></span>
              <span class="text-text-secondary"><strong class="text-text-primary">Real-World Validation</strong> — Partnership with fintech companies for deployment in Pakistan's banking ecosystem</span>
            </li>
          </ul>
        </div>

        <!-- Project Details -->
        <div class="mb-10 bg-dark-700/50 rounded-xl p-6 border border-dark-500/30">
