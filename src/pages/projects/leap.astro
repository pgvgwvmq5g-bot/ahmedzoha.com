---
// leap.astro - LEAP Project Page with Tabs
import BaseLayout from '../../layouts/BaseLayout.astro';

const project = {
  title: 'LEAP — Learning Enhancement through Adaptive Personalisation',
  tagline: 'AI-Powered Personalised Learning for Higher Education',
  description: 'Innovate UK KTP developing adaptive AI algorithms and real-time analytics for personalised learning in higher education.',
  status: 'Active',
  tags: ['EdTech', 'AI/ML', 'Adaptive Learning', 'Analytics', 'KTP'],
};
---

<BaseLayout title={project.title} description={project.description}>

  <section class="pt-8 lg:pt-16">
    <!-- Back Button -->
    <a
      href="/projects/"
      class="inline-flex items-center gap-2 text-text-secondary hover:text-accent-yellow
             transition-colors mb-8"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Projects
    </a>

    <!-- Project Header -->
    <div class="mb-8">
      <div class="flex flex-wrap gap-2 mb-4">
        {project.tags.map((tag) => (
          <span class="px-3 py-1 bg-accent-yellow/10 text-accent-yellow rounded-full text-sm">
            {tag}
          </span>
        ))}
      </div>

      <h1 class="text-3xl lg:text-5xl font-light mb-2">
        {project.title}
      </h1>

      <p class="text-xl text-accent-yellow mb-6">
        {project.tagline}
      </p>

      <div class="flex flex-wrap items-center gap-4 text-text-secondary">
        <span class="px-3 py-1 rounded-full text-sm font-medium bg-green-500/20 text-green-400">
          {project.status}
        </span>
      </div>
    </div>

    <!-- Project Cover Image -->
    <div class="mb-12 rounded-2xl overflow-hidden bg-dark-700 aspect-video flex items-center justify-center border border-dark-500/30">
      <img
        src="/images/projects/leap_cp.png"
        alt="LEAP Project"
        class="w-full h-full object-cover"
        onerror="this.style.display='none'; this.parentElement.innerHTML='<div class=\'w-full h-full flex items-center justify-center bg-gradient-to-br from-purple-500/10 to-blue-500/10\'><div class=\'text-center p-8\'><svg class=\'w-20 h-20 text-purple-400 mx-auto mb-4\' fill=\'none\' stroke=\'currentColor\' viewBox=\'0 0 24 24\'><path stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'1\' d=\'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253\' /></svg><p class=\'text-text-muted\'>LEAP Platform - AI-Powered Personalised Learning</p></div></div>'"
      />
    </div>

    <!-- Tab Navigation -->
    <div class="mb-8 border-b border-dark-500/30">
      <div class="flex gap-1 overflow-x-auto">
        <button
          class="tab-btn active px-6 py-3 text-sm font-medium transition-all whitespace-nowrap"
          data-tab="overview"
        >
          Overview
        </button>
        <button
          class="tab-btn px-6 py-3 text-sm font-medium transition-all whitespace-nowrap"
          data-tab="team"
        >
          Team & Partners
        </button>
        <button
          class="tab-btn px-6 py-3 text-sm font-medium transition-all whitespace-nowrap"
          data-tab="activities"
        >
          Activities & Innovation
        </button>
        <button
          class="tab-btn px-6 py-3 text-sm font-medium transition-all whitespace-nowrap"
          data-tab="outputs"
        >
          Outputs & Impact
        </button>
        <button
          class="tab-btn px-6 py-3 text-sm font-medium transition-all whitespace-nowrap"
          data-tab="resources"
        >
          Resources
        </button>
      </div>
    </div>

    <!-- Tab Content Container -->
    <div class="tab-content-container">

      <!-- OVERVIEW TAB -->
      <div id="overview-tab" class="tab-content active">

        <!-- Project Header Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-10">
          <div class="bg-dark-700 rounded-lg p-4 border border-dark-500/30">
            <div class="text-xs text-text-muted mb-1">Funding</div>
            <div class="text-sm font-medium text-accent-yellow">Innovate UK KTP</div>
          </div>
          <div class="bg-dark-700 rounded-lg p-4 border border-dark-500/30">
            <div class="text-xs text-text-muted mb-1">Duration</div>
            <div class="text-sm font-medium text-text-primary">24-36 months</div>
          </div>
          <div class="bg-dark-700 rounded-lg p-4 border border-dark-500/30">
            <div class="text-xs text-text-muted mb-1">Partner</div>
            <div class="text-sm font-medium text-text-primary">AWTG Limited</div>
          </div>
          <div class="bg-dark-700 rounded-lg p-4 border border-dark-500/30">
            <div class="text-xs text-text-muted mb-1">Institution</div>
            <div class="text-sm font-medium text-text-primary">University of Glasgow</div>
          </div>
        </div>

        <!-- The Challenge -->
        <div class="mb-10">
          <h2 class="text-2xl font-medium mb-4">The Challenge</h2>
          <p class="text-text-secondary leading-relaxed">
            The global EdTech sector is valued at approximately $400 billion (2025), with the segment for
            personalised AI chatbots and adaptive learning platforms expected to reach $6.8 billion by 2027.
            However, current generic AI tools dominate the market but lack deep personalisation, evidence-based
            pedagogy, and seamless integration with university curriculum systems — creating a significant gap
            for institutions seeking tailored educational experiences.
          </p>
        </div>

        <!-- The Solution -->
        <div class="mb-10">
          <h2 class="text-2xl font-medium mb-4">The Solution: LEAP Chatbot</h2>
          <p class="text-text-secondary leading-relaxed mb-4">
            LEAP is an AI-driven educational chatbot designed to deliver scalable, personalised learning
            experiences for higher education institutions. Unlike generic AI assistants, LEAP combines:
          </p>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-2 flex-shrink-0"></span>
              <span class="text-text-secondary"><strong class="text-text-primary">Adaptive AI Algorithms</strong> — Real-time adjustment to individual learning styles and progress</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-2 flex-shrink-0"></span>
              <span class="text-text-secondary"><strong class="text-text-primary">Evidence-Based Pedagogy</strong> — Grounded in educational research for effective interventions</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-2 flex-shrink-0"></span>
              <span class="text-text-secondary"><strong class="text-text-primary">Curriculum Alignment</strong> — Seamless integration with university learning management systems</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-2 flex-shrink-0"></span>
              <span class="text-text-secondary"><strong class="text-text-primary">Real-Time Analytics</strong> — Actionable insights for educators on student engagement and performance</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-2 flex-shrink-0"></span>
              <span class="text-text-secondary"><strong class="text-text-primary">Scalable Customisation</strong> — Tailored content delivery across disciplines and institutions</span>
            </li>
          </ul>
        </div>

        <!-- Funding Details -->
        <div class="mb-10 bg-dark-700/50 rounded-xl p-6 border border-dark-500/30">
          <h2 class="text-2xl font-medium mb-4">Funding Details</h2>
          <div class="overflow-x-auto">
            <table class="w-full text-sm">
              <tbody class="text-text-secondary">
                <tr class="border-b border-dark-500/20">
                  <td class="py-3 pr-4 text-text-muted font-medium">Programme</td>
                  <td class="py-3">Innovate UK Knowledge Transfer Partnership (KTP)</td>
                </tr>
                <tr class="border-b border-dark-500/20">
                  <td class="py-3 pr-4 text-text-muted font-medium">Knowledge Base</td>
                  <td class="py-3">University of Glasgow, James Watt School of Engineering</td>
                </tr>
                <tr class="border-b border-dark-500/20">
                  <td class="py-3 pr-4 text-text-muted font-medium">Industry Partner</td>
                  <td class="py-3">AWTG Limited</td>
                </tr>
                <tr class="border-b border-dark-500/20">
                  <td class="py-3 pr-4 text-text-muted font-medium">Duration</td>
                  <td class="py-3">24–36 months</td>
                </tr>
                <tr>
                  <td class="py-3 pr-4 text-text-muted font-medium">Pilot Institution</td>
                  <td class="py-3">University of Glasgow</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Research Objectives -->
        <div class="mb-10">
          <h2 class="text-2xl font-medium mb-4">Research Objectives</h2>
          <div class="space-y-3">
            <div class="flex items-start gap-3">
              <span class="w-7 h-7 rounded-full bg-accent-yellow/10 flex items-center justify-center flex-shrink-0 text-accent-yellow text-sm font-bold">1</span>
              <p class="text-text-secondary pt-1">Develop adaptive AI algorithms for personalised learning pathways</p>
            </div>
            <div class="flex items-start gap-3">
              <span class="w-7 h-7 rounded-full bg-accent-yellow/10 flex items-center justify-center flex-shrink-0 text-accent-yellow text-sm font-bold">2</span>
              <p class="text-text-secondary pt-1">Create real-time analytics dashboards for educator insights</p>
            </div>
            <div class="flex items-start gap-3">
              <span class="w-7 h-7 rounded-full bg-accent-yellow/10 flex items-center justify-center flex-shrink-0 text-accent-yellow text-sm font-bold">3</span>
              <p class="text-text-secondary pt-1">Design scalable content customisation frameworks</p>
            </div>
            <div class="flex items-start gap-3">
              <span class="w-7 h-7 rounded-full bg-accent-yellow/10 flex items-center justify-center flex-shrink-0 text-accent-yellow text-sm font-bold">4</span>
              <p class="text-text-secondary pt-1">Integrate LEAP with university learning management systems</p>
            </div>
            <div class="flex items-start gap-3">
              <span class="w-7 h-7 rounded-full bg-accent-yellow/10 flex items-center justify-center flex-shrink-0 text-accent-yellow text-sm font-bold">5</span>
              <p class="text-text-secondary pt-1">Validate effectiveness through pilot deployment at University of Glasgow</p>
            </div>
            <div class="flex items-start gap-3">
              <span class="w-7 h-7 rounded-full bg-accent-yellow/10 flex items-center justify-center flex-shrink-0 text-accent-yellow text-sm font-bold">6</span>
              <p class="text-text-secondary pt-1">Refine platform for market readiness and global scalability</p>
            </div>
          </div>
        </div>

        <!-- Methodology & Approach -->
        <div class="mb-10">
          <h2 class="text-2xl font-medium mb-4">Methodology & Approach</h2>
          <p class="text-text-secondary leading-relaxed mb-4">
            The KTP will embed advanced capabilities in:
          </p>
          <div class="grid sm:grid-cols-2 gap-4">
            <div class="bg-dark-700 rounded-lg p-5 border border-dark-500/30">
              <h3 class="font-medium text-accent-yellow mb-2">Personalised Learning Systems</h3>
              <p class="text-sm text-text-secondary">AI models that adapt to individual student needs</p>
            </div>
            <div class="bg-dark-700 rounded-lg p-5 border border-dark-500/30">
              <h3 class="font-medium text-accent-yellow mb-2">Adaptive Algorithms</h3>
              <p class="text-sm text-text-secondary">Machine learning for targeted interventions based on learning patterns</p>
            </div>
            <div class="bg-dark-700 rounded-lg p-5 border border-dark-500/30">
              <h3 class="font-medium text-accent-yellow mb-2">Data-Driven Insights</h3>
              <p class="text-sm text-text-secondary">Analytics pipelines connecting student behaviour to outcomes</p>
            </div>
            <div class="bg-dark-700 rounded-lg p-5 border border-dark-500/30">
              <h3 class="font-medium text-accent-yellow mb-2">Curriculum Integration</h3>
              <p class="text-sm text-text-secondary">APIs and connectors for seamless LMS integration</p>
            </div>
            <div class="bg-dark-700 rounded-lg p-5 border border-dark-500/30">
              <h3 class="font-medium text-accent-yellow mb-2">Collaborative Tools</h3>
              <p class="text-sm text-text-secondary">Features enabling student-educator interaction and feedback loops</p>
            </div>
          </div>
        </div>

      </div>

      <!-- TEAM & PARTNERS TAB -->
      <div id="team-tab" class="tab-content">

        <!-- Academic Team -->
        <div class="mb-12">
          <h2 class="text-2xl font-medium mb-6">Academic Team (University of Glasgow)</h2>
          <div class="grid md:grid-cols-3 gap-6">

            <!-- Team Member 1 -->
            <div class="bg-dark-700 rounded-xl overflow-hidden border border-dark-500/30">
              <div class="aspect-square bg-gradient-to-br from-accent-yellow/10 to-purple-500/10 overflow-hidden">
                <img
                  src="/images/profile-large.jpg"
                  alt="Dr Ahmed Zoha"
                  class="w-full h-full object-cover"
                  onerror="this.style.display='none'; this.parentElement.innerHTML='<div class=\'w-full h-full flex items-center justify-center\'><svg class=\'w-20 h-20 text-accent-yellow/30\' fill=\'none\' stroke=\'currentColor\' viewBox=\'0 0 24 24\'><path stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'1\' d=\'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z\' /></svg></div>'"
                />
              </div>
              <div class="p-5">
                <h3 class="font-medium text-lg text-text-primary mb-1">Dr Ahmed Zoha</h3>
                <div class="text-sm text-accent-yellow mb-3">Principal Investigator / Academic Lead</div>
                <p class="text-xs text-text-secondary">AI/ML for personalised systems, federated learning, data analytics, edge intelligence, IoT sensing</p>
              </div>
            </div>

            <!-- Team Member 2 -->
            <div class="bg-dark-700 rounded-xl overflow-hidden border border-dark-500/30">
              <div class="aspect-square bg-gradient-to-br from-blue-500/10 to-cyan-500/10 overflow-hidden">
                <img
                  src="/images/projects/sajjad_hussain.jpeg"
                  alt="Prof Sajjad Hussain"
                  class="w-full h-full object-cover"
                  onerror="this.style.display='none'; this.parentElement.innerHTML='<div class=\'w-full h-full flex items-center justify-center\'><svg class=\'w-20 h-20 text-blue-400/30\' fill=\'none\' stroke=\'currentColor\' viewBox=\'0 0 24 24\'><path stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'1\' d=\'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z\' /></svg></div>'"
                />
              </div>
              <div class="p-5">
                <h3 class="font-medium text-lg text-text-primary mb-1">Prof Sajjad Hussain</h3>
                <div class="text-sm text-accent-yellow mb-3">Co-Investigator</div>
                <p class="text-xs text-text-secondary">Machine learning, intelligent systems</p>
              </div>
            </div>

            <!-- Team Member 3 -->
            <div class="bg-dark-700 rounded-xl overflow-hidden border border-dark-500/30">
              <div class="aspect-square bg-gradient-to-br from-purple-500/10 to-pink-500/10 overflow-hidden">
                <img
                  src="/images/projects/maliimran.jpeg"
                  alt="Prof Muhammad Ali Imran"
                  class="w-full h-full object-cover"
                  onerror="this.style.display='none'; this.parentElement.innerHTML='<div class=\'w-full h-full flex items-center justify-center\'><svg class=\'w-20 h-20 text-purple-400/30\' fill=\'none\' stroke=\'currentColor\' viewBox=\'0 0 24 24\'><path stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'1\' d=\'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z\' /></svg></div>'"
                />
              </div>
              <div class="p-5">
                <h3 class="font-medium text-lg text-text-primary mb-1">Prof Muhammad Ali Imran</h3>
                <div class="text-sm text-accent-yellow mb-3">Co-Investigator</div>
                <p class="text-xs text-text-secondary">Communications systems, 5G/6G, smart campus technologies</p>
              </div>
            </div>

          </div>
        </div>

        <!-- Industry Partner -->
        <div class="mb-12">
          <h2 class="text-2xl font-medium mb-6">Industry Partner</h2>
          <div class="bg-dark-700 rounded-xl p-6 border border-dark-500/30">
            <div class="flex items-start justify-between mb-4">
              <div>
                <h3 class="text-xl font-medium text-text-primary mb-1">AWTG Limited</h3>
                <div class="text-sm text-text-muted mb-2">Company Registration: 05793772</div>
                <div class="text-sm text-text-secondary mb-1">8 Canham Mews, Canham Road, London W3 7SR</div>
                <a href="http://www.awtg.co.uk" target="_blank" rel="noopener noreferrer" class="text-sm text-accent-yellow hover:underline">
                  www.awtg.co.uk
                </a>
              </div>
            </div>

            <div class="mb-4">
              <h4 class="text-sm font-medium text-text-muted uppercase tracking-wider mb-2">Company Profile</h4>
              <p class="text-text-secondary text-sm leading-relaxed">
                AWTG Limited is an EdTech company headquartered in London, focused on delivering scalable, AI-driven educational tools.
                The KTP with University of Glasgow will enable AWTG to become a global leader in personalised learning solutions.
              </p>
            </div>

            <div>
              <h4 class="text-sm font-medium text-text-muted uppercase tracking-wider mb-3">Key Contacts</h4>
              <div class="grid sm:grid-cols-3 gap-4">
                <div class="bg-dark-600/50 rounded-lg p-3">
                  <div class="font-medium text-text-primary text-sm">Ian Vernon</div>
                  <div class="text-xs text-text-muted">Chief Operating Officer</div>
                </div>
                <div class="bg-dark-600/50 rounded-lg p-3">
                  <div class="font-medium text-text-primary text-sm">Erkan Berk</div>
                  <div class="text-xs text-text-muted">Software Development Manager</div>
                </div>
                <div class="bg-dark-600/50 rounded-lg p-3">
                  <div class="font-medium text-text-primary text-sm">Peter Najm</div>
                  <div class="text-xs text-text-muted">Project Coordinator</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Partnership Model -->
        <div class="mb-12">
          <h2 class="text-2xl font-medium mb-6">Partnership Model</h2>
          <div class="grid md:grid-cols-3 gap-6">

            <div class="bg-gradient-to-br from-blue-500/10 to-cyan-500/10 rounded-xl p-6 border border-blue-500/20">
              <h3 class="text-lg font-medium text-blue-400 mb-4">University of Glasgow</h3>
              <ul class="space-y-2 text-sm text-text-secondary">
                <li class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 bg-blue-400 rounded-full mt-1.5 flex-shrink-0"></span>
                  <span>AI/ML Research Expertise</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 bg-blue-400 rounded-full mt-1.5 flex-shrink-0"></span>
                  <span>Educational Technology</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 bg-blue-400 rounded-full mt-1.5 flex-shrink-0"></span>
                  <span>Smart Campus Infrastructure</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 bg-blue-400 rounded-full mt-1.5 flex-shrink-0"></span>
                  <span>PhD Student Training</span>
                </li>
              </ul>
            </div>

            <div class="bg-gradient-to-br from-purple-500/10 to-pink-500/10 rounded-xl p-6 border border-purple-500/20">
              <h3 class="text-lg font-medium text-purple-400 mb-4">AWTG Limited</h3>
              <ul class="space-y-2 text-sm text-text-secondary">
                <li class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 bg-purple-400 rounded-full mt-1.5 flex-shrink-0"></span>
                  <span>EdTech Commercialisation</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 bg-purple-400 rounded-full mt-1.5 flex-shrink-0"></span>
                  <span>Software Development</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 bg-purple-400 rounded-full mt-1.5 flex-shrink-0"></span>
                  <span>Market Access</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 bg-purple-400 rounded-full mt-1.5 flex-shrink-0"></span>
                  <span>Customer Networks</span>
                </li>
              </ul>
            </div>

            <div class="bg-gradient-to-br from-accent-yellow/10 to-green-500/10 rounded-xl p-6 border border-accent-yellow/20">
              <h3 class="text-lg font-medium text-accent-yellow mb-4">Joint Innovation</h3>
              <ul class="space-y-2 text-sm text-text-secondary">
                <li class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-1.5 flex-shrink-0"></span>
                  <span>Knowledge Transfer</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-1.5 flex-shrink-0"></span>
                  <span>Technology Development</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-1.5 flex-shrink-0"></span>
                  <span>Product Validation</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-1.5 flex-shrink-0"></span>
                  <span>Market Launch</span>
                </li>
              </ul>
            </div>

          </div>
        </div>

      </div>

      <!-- ACTIVITIES & INNOVATION TAB -->
      <div id="activities-tab" class="tab-content">

        <!-- Work Packages -->
        <div class="mb-12">
          <h2 class="text-2xl font-medium mb-6">Work Packages</h2>
          <div class="space-y-4">

            <!-- WP1 -->
            <details class="bg-dark-700 rounded-xl border border-dark-500/30 overflow-hidden group">
              <summary class="p-5 cursor-pointer list-none flex items-center justify-between hover:bg-dark-600 transition-colors">
                <div class="flex items-center gap-4">
                  <span class="w-10 h-10 rounded-lg bg-accent-yellow/10 flex items-center justify-center text-accent-yellow font-bold flex-shrink-0">WP1</span>
                  <div>
                    <h3 class="font-medium text-text-primary">Requirements & Design</h3>
                    <p class="text-xs text-text-muted mt-1">Foundation & Architecture</p>
                  </div>
                </div>
                <svg class="w-5 h-5 text-text-muted group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="px-5 pb-5 pt-0">
                <ul class="space-y-2 text-sm text-text-secondary">
                  <li class="flex items-start gap-2">
                    <span class="w-1.5 h-1.5 bg-accent-yellow rounded-full mt-1.5 flex-shrink-0"></span>
