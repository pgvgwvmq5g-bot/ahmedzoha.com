---

<BaseLayout title="Homepage">
  
  <!-- Hero Section -->
  <section class="pt-8 lg:pt-16">
    <div class="mb-12">
      <h1 class="text-4xl lg:text-5xl font-light mb-6">
        Hello! I'm <span class="text-accent-yellow font-medium">Dr Ahmed Zoha</span>
      </h1>
      <p class="text-lg text-text-secondary max-w-2xl leading-relaxed">
        I'm an academic, author, and scientist driven by curiosity to understand how 
        intelligence can serve humanity. My work explores how AI can connect people, 
        systems, and ideas — creating technologies that don't just think, but care.
      </p>
    </div>

    <!-- Career Highlights -->
    <div class="mb-16">
      <h2 class="text-xl font-medium mb-8 text-center lg:text-left">Career Highlights</h2>
      
      <!-- Stats Cards -->
      <div class="stats-gradient rounded-2xl p-6 lg:p-8 glow mb-10">
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 lg:gap-8">
          {stats.map((stat) => (
            <div class="text-center">
              <div class="text-2xl sm:text-3xl lg:text-5xl font-bold text-accent-yellow mb-1 lg:mb-2">
                {stat.value}
              </div>
              <div class="text-xs sm:text-sm text-text-secondary">
                {stat.label}
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Career Timeline -->
      <div class="space-y-6">
        <!-- Timeline Row 1 -->
        <div class="timeline-container">
          <div class="timeline-wrapper">
            <div class="timeline-line-bg"></div>
            <div class="timeline-track">
              {timelineRow1.map((item) => (
                <div class="timeline-item">
                  <div class="timeline-dot"></div>
                  <div class="timeline-content">
                    <h4 class="timeline-title">{item.title}</h4>
                    {item.subtitle && <p class="timeline-subtitle">{item.subtitle}</p>}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Timeline Row 2 -->
        <div class="timeline-container">
          <div class="timeline-wrapper">
            <div class="timeline-line-bg"></div>
            <div class="timeline-track">
              {timelineRow2.map((item) => (
                <div class="timeline-item">
                  <div class="timeline-dot"></div>
                  <div class="timeline-content">
                    <h4 class="timeline-title">{item.title}</h4>
                    {item.subtitle && <p class="timeline-subtitle">{item.subtitle}</p>}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- News & Updates Section -->
    <div class="mb-16">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-medium">News & Updates</h2>
        <a href="/news/" class="text-sm text-accent-yellow hover:underline">
          View all →
        </a>
      </div>
      
      {latestNews.length > 0 ? (
        <div class="grid gap-3">
          {latestNews.slice(0, 5).map((item) => (
          <a
            href={item.link}
              class="group flex gap-3 p-3 bg-dark-700 rounded-lg border border-dark-500/30
                   hover:border-accent-yellow/30 hover:bg-dark-600 transition-all duration-300"
            >
              <!-- Content -->
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  {item.categories && item.categories.length > 0 && (
                    <span class="px-2 py-0.5 bg-accent-yellow/10 text-accent-yellow rounded text-[10px] font-medium">
                      {item.categories[0].name}
                    </span>
                  )}
                  <span class="text-[10px] text-text-muted">{item.date}</span>
                </div>
                <h3 class="font-medium text-sm mb-1 group-hover:text-accent-yellow transition-colors leading-tight"
                    set:html={item.title} />
                <p class="text-xs text-text-secondary line-clamp-2 leading-relaxed">
                  {item.excerpt}
                </p>
              </div>

              <!-- Arrow -->
              <div class="flex items-center">
                <span class="text-accent-yellow opacity-0 group-hover:opacity-100 transition-opacity text-sm">
                  →
                </span>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <!-- Placeholder when no news -->
        <div class="bg-dark-700 rounded-xl p-8 border border-dark-500/30 text-center">
          <div class="w-12 h-12 bg-dark-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-accent-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <h3 class="font-medium mb-2">News Coming Soon</h3>
          <p class="text-sm text-text-secondary max-w-sm mx-auto">
            Latest news and updates will appear here once connected to the content management system.
          </p>
        </div>
      )}
    </div>

    <!-- Featured Projects Section -->
    <div class="mb-16">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-medium">Featured Projects</h2>
        <a href="/projects/" class="text-sm text-accent-yellow hover:underline">
          View all →
        </a>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {featuredProjects.slice(0, 4).map((project, index) => (
          <a
            href={`/projects/${project.id}/`}
            class="project-card group relative block rounded-2xl overflow-hidden border border-dark-500/30
                   hover:border-accent-yellow/30 transition-all duration-500"
            style={`animation-delay: ${index * 100}ms`}
          >
            <!-- Background Gradient -->
            <div class={`absolute inset-0 bg-gradient-to-br ${project.color} opacity-0 
                        group-hover:opacity-100 transition-opacity duration-500`}></div>
            
            <!-- Image Container -->
            <div class="relative aspect-[4/3] bg-dark-700 overflow-hidden">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover opacity-80 group-hover:opacity-100
                       group-hover:scale-110 transition-all duration-700 ease-out"
                onerror="this.style.display='none'"
              />
              <!-- Overlay gradient -->
              <div class="absolute inset-0 bg-gradient-to-t from-dark-900 via-dark-900/40 to-transparent"></div>
              
              <!-- Floating tags -->
              <div class="absolute top-3 left-3 flex gap-2">
                {project.tags.slice(0, 2).map((tag) => (
                  <span class="px-2 py-1 bg-dark-900/70 backdrop-blur-sm rounded-md text-[10px] 
                               text-text-secondary group-hover:bg-accent-yellow/20 
                               group-hover:text-accent-yellow transition-all duration-300">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
            
            <!-- Content -->
            <div class="relative p-4 bg-dark-800/80 backdrop-blur-sm">
              <h3 class="font-medium text-sm mb-2 group-hover:text-accent-yellow transition-colors duration-300 leading-snug">
                {project.title}
            </h3>
              <p class="text-xs text-text-secondary line-clamp-2 leading-relaxed">
                {project.description}
              </p>
              
              <!-- Animated arrow -->
              <div class="mt-3 flex items-center gap-1 text-accent-yellow text-xs opacity-0 
                          group-hover:opacity-100 transform translate-x-[-10px] 
                          group-hover:translate-x-0 transition-all duration-300">
                <span>Explore</span>
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
            
            <!-- Shine effect on hover -->
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none">
              <div class="absolute inset-0 translate-x-[-100%] group-hover:translate-x-[100%] 
                          transition-transform duration-1000 bg-gradient-to-r from-transparent 
                          via-white/5 to-transparent"></div>
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Impact Story & Outreach Section -->
    <div class="mb-16">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-medium">Impact & Outreach</h2>
        <a href="/impact/" class="text-sm text-accent-yellow hover:underline">
