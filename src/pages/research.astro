        const isMobile = window.innerWidth < 1024;

        if (isMobile && mobileDetail) {
          // Mobile: Toggle accordion
          const isCurrentlyOpen = !mobileDetail.classList.contains('hidden');

          // Close all other accordions
          document.querySelectorAll('.mobile-pub-detail').forEach(detail => {
            detail.classList.add('hidden');
