        // Scroll to the publications section
        setTimeout(() => {
          document.getElementById('selected-publications')?.scrollIntoView({ behavior: 'smooth' });
        }, 100);
      }
    }

    // Check hash on page load
    handlePublicationHash();

    // Listen for hash changes
    window.addEventListener('hashchange', handlePublicationHash);
