---

<BaseLayout title="Impact" description="Research impact, awards, and recognition">
  
  <section class="pt-8 lg:pt-16">
    <!-- Page Header -->
    <div class="mb-12">
      <h1 class="text-4xl lg:text-5xl font-light mb-4">
        Research <span class="text-accent-yellow">Impact</span>
      </h1>
      <p class="text-text-secondary max-w-2xl">
        Measuring the influence and reach of my research contributions 
        across academia and industry.
      </p>
    </div>

    <!-- Impact Stories Section -->
    <div class="mb-16">
      <h2 class="text-2xl font-medium mb-8">Impact Stories</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {impactStories.map((story, index) => (
          <a
            href={`/impact/${story.id}/`}
            class="group block bg-dark-700 rounded-2xl overflow-hidden border border-dark-500/30
                   hover:border-accent-yellow/30 transition-all duration-300 impact-story-card"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <!-- Image -->
            <div class={`aspect-video relative overflow-hidden bg-gradient-to-br ${story.color}`}>
              <img
                src={story.image}
                alt={story.title}
                class="w-full h-full object-cover opacity-80 group-hover:opacity-100
                       group-hover:scale-105 transition-all duration-500"
                onerror="this.style.display='none'"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-dark-700 via-transparent to-transparent"></div>

              <!-- Badges Container -->
              <div class="absolute top-4 left-4 right-4 flex items-start justify-between gap-2">
                <!-- Category Badge -->
                <span class="px-3 py-1 bg-dark-900/80 backdrop-blur-sm rounded-full text-xs font-medium text-accent-yellow max-w-[calc(100%-80px)] truncate">
                  {story.category}
                </span>

                <!-- Year Badge -->
                <span class="px-3 py-1 bg-dark-900/80 backdrop-blur-sm rounded-full text-xs text-text-secondary flex-shrink-0">
                  {story.year}
                </span>
              </div>
            </div>

            <!-- Content -->
            <div class="p-5">
              <h3 class="font-medium text-lg mb-2 group-hover:text-accent-yellow transition-colors line-clamp-2">
                {story.title}
              </h3>
              <p class="text-sm text-text-secondary mb-4 line-clamp-2">
                {story.subtitle}
              </p>
              
              <!-- Tags -->
              <div class="flex flex-wrap gap-2">
                {story.tags.map((tag) => (
                  <span class="px-2 py-1 bg-dark-600 rounded text-xs text-text-muted">
                    {tag}
                  </span>
                ))}
              </div>
              
              <!-- Read More -->
              <div class="mt-4 flex items-center gap-2 text-sm text-accent-yellow opacity-0 group-hover:opacity-100 transition-opacity">
                <span>Read Story</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Awards Section -->
    <div class="mb-16">
      <h2 class="text-2xl font-medium mb-8">Awards & Recognition</h2>
      <div class="grid md:grid-cols-2 gap-4">
        {awards.map((award) => (
          <div class="p-6 bg-dark-700 rounded-xl border border-dark-500/30 
                      hover:border-accent-yellow/30 transition-all">
            <div class="flex items-start justify-between mb-3">
              <div class="w-10 h-10 bg-accent-yellow/10 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-accent-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                </svg>
              </div>
              <span class="text-sm text-accent-yellow">{award.year}</span>
            </div>
            <h3 class="font-medium mb-1">{award.title}</h3>
            <p class="text-sm text-text-secondary mb-2">{award.organization}</p>
            <p class="text-sm text-text-muted">{award.description}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Media Features -->
    <div class="mb-16">
      <h2 class="text-2xl font-medium mb-8">In The Media</h2>
      <div class="space-y-4">
        {mediaFeatures.map((feature) => (
          <div class="p-5 bg-dark-700 rounded-xl border border-dark-500/30 hover:border-accent-yellow/30 transition-all">
            <div class="flex gap-5">
              <!-- Logo -->
              {feature.logo && (
                <div class="flex-shrink-0">
                  <div class="w-16 h-16 bg-white rounded-lg p-2 flex items-center justify-center">
                    <img 
                      src={feature.logo} 
                      alt={feature.outlet}
                      class="w-full h-full object-contain"
                    />
                  </div>
                </div>
              )}
              
              <!-- Content -->
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4 mb-2">
                  <div>
                    <span class="text-xs text-accent-yellow uppercase tracking-wider">
                      {feature.outlet}
                    </span>
                    <h3 class="font-medium mt-1">
                      {feature.title}
                    </h3>
                  </div>
                  <span class="text-sm text-text-muted flex-shrink-0">{feature.date}</span>
                </div>
                
                {feature.description && (
                  <p class="text-sm text-text-secondary mb-4">
                    {feature.description}
                  </p>
                )}
                
                <div class="flex flex-wrap gap-3">
                  <a 
                    href={feature.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-4 py-2 bg-dark-600 rounded-lg text-sm 
                           hover:bg-dark-500 hover:text-accent-yellow transition-all"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                    </svg>
                    Read Article
                  </a>
                  
                  {feature.publicationLink && (
                    <a 
                      href={feature.publicationLink}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-2 px-4 py-2 bg-accent-yellow/10 text-accent-yellow rounded-lg text-sm 
                             hover:bg-accent-yellow/20 transition-all"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                      </svg>
                      View PLOS ONE Publication
                    </a>
                  )}
                  
                  {feature.projectLink && (
                    <a 
                      href={feature.projectLink}
                      class="inline-flex items-center gap-2 px-4 py-2 bg-accent-teal/10 text-accent-teal rounded-lg text-sm 
                             hover:bg-accent-teal/20 transition-all"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                      </svg>
                      {feature.projectTitle || 'View Project'}
                    </a>
                  )}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

  </section>

</BaseLayout>
