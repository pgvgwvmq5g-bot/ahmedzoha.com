    </div>

    <!-- Upcoming Events -->
    <div class="mb-16">
      <h2 class="text-xl font-medium mb-6">Upcoming Events</h2>
      <div class="bg-dark-700 rounded-2xl border border-dark-500/30 overflow-hidden">
        {upcomingEvents.map((event, index) => (
          <div class={`p-6 flex items-center justify-between
                      ${index !== upcomingEvents.length - 1 ? 'border-b border-dark-500/30' : ''}`}>
            <div>
              <span class="text-xs text-accent-yellow uppercase tracking-wider">{event.type}</span>
              <h3 class="font-medium mt-1">{event.title}</h3>
              <p class="text-sm text-text-muted">{event.location}</p>
            </div>
            <div class="text-right">
              <div class="text-sm font-medium">{event.date}</div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- All News & Updates -->
    {hasNews ? (
      <div class="mb-16">
        <h2 class="text-xl font-medium mb-6">Recent News</h2>

        <!-- Category Tabs -->
        <div class="flex flex-wrap gap-2 mb-4 border-b border-dark-500/30 pb-3">
          {newsCategories.map((cat, index) => (
            <button
              class={`news-tab px-3 py-1.5 rounded-md text-xs font-medium transition-all ${
                index === 0
                  ? 'bg-accent-yellow text-dark-900'
                  : 'bg-dark-700 text-text-secondary hover:bg-dark-600 hover:text-text-primary'
              }`}
              data-category={cat}
            >
              {cat}
            </button>
          ))}
        </div>

        <!-- News Items -->
        <div class="space-y-3" id="news-container">
          {posts.map((item) => (
            <a
              href={item.link}
              class="news-item block p-4 bg-dark-700 rounded-lg border border-dark-500/30
                     hover:border-accent-yellow/30 hover:bg-dark-600 transition-all group"
              data-category={item.category}
            >
              <div class="flex items-start gap-2 mb-2">
                {item.categories.length > 0 && (
                  <span class="px-2 py-0.5 bg-accent-yellow/20 text-accent-yellow rounded text-[10px] font-medium">
                    {item.categories[0].name}
                  </span>
                )}
                <span class="text-xs text-text-muted">{item.date}</span>
              </div>
              <h3 class="font-medium text-base mb-2 group-hover:text-accent-yellow transition-colors leading-tight"
                  set:html={item.title} />
              <p class="text-sm text-text-secondary leading-relaxed">
                {item.excerpt}
              </p>
              <div class="mt-3 flex items-center gap-2 text-accent-yellow text-xs opacity-0
                          group-hover:opacity-100 transition-opacity">
                <span>Read more</span>
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </a>
          ))}
        </div>

        <!-- Pagination -->
        <div class="mt-6 flex items-center justify-between" id="pagination-container">
          <button
            id="prev-page"
            class="px-4 py-2 bg-dark-700 text-text-secondary rounded-lg border border-dark-500/30
                   hover:bg-dark-600 hover:border-accent-yellow/30 transition-all disabled:opacity-50
                   disabled:cursor-not-allowed text-sm"
            disabled
          >
            ← Previous
          </button>

          <div class="flex items-center gap-2">
            <span class="text-sm text-text-muted">Page</span>
            <span id="current-page" class="text-sm font-medium text-accent-yellow">1</span>
            <span class="text-sm text-text-muted">of</span>
            <span id="total-pages" class="text-sm font-medium">1</span>
          </div>

          <button
            id="next-page"
            class="px-4 py-2 bg-dark-700 text-text-secondary rounded-lg border border-dark-500/30
                   hover:bg-dark-600 hover:border-accent-yellow/30 transition-all disabled:opacity-50
                   disabled:cursor-not-allowed text-sm"
          >
            Next →
          </button>
        </div>
      </div>
    ) : (
      <!-- No News Yet -->
      <div class="bg-dark-700 rounded-2xl p-12 border border-dark-500/30 text-center mb-16">
        <div class="w-16 h-16 bg-dark-600 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-accent-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
        </div>
        <h3 class="text-xl font-medium mb-3">No News Items Yet</h3>
        <p class="text-text-secondary mb-6 max-w-md mx-auto">
          News items will appear here once added.
        </p>
      </div>
    )}

  </section>

  <!-- Category Filtering & Pagination Script -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const tabs = document.querySelectorAll('.news-tab');
      const newsItems = Array.from(document.querySelectorAll('.news-item'));
      const prevBtn = document.getElementById('prev-page');
      const nextBtn = document.getElementById('next-page');
      const currentPageEl = document.getElementById('current-page');
      const totalPagesEl = document.getElementById('total-pages');
      const paginationContainer = document.getElementById('pagination-container');

      const ITEMS_PER_PAGE = 5;
      let currentPage = 1;
      let currentCategory = 'All';
      let filteredItems = [];

      function getFilteredItems() {
        return newsItems.filter(item => {
          const itemCategory = item.getAttribute('data-category');
          return currentCategory === 'All' || itemCategory === currentCategory;
        });
      }

      function updatePagination() {
        filteredItems = getFilteredItems();
        const totalPages = Math.ceil(filteredItems.length / ITEMS_PER_PAGE);

        // Hide all items first
        newsItems.forEach(item => item.style.display = 'none');

        // Show items for current page
        const startIdx = (currentPage - 1) * ITEMS_PER_PAGE;
        const endIdx = startIdx + ITEMS_PER_PAGE;
        filteredItems.slice(startIdx, endIdx).forEach(item => {
          item.style.display = 'block';
        });

        // Update pagination UI
        currentPageEl.textContent = currentPage;
        totalPagesEl.textContent = totalPages || 1;
        prevBtn.disabled = currentPage === 1;
        nextBtn.disabled = currentPage >= totalPages;

        // Hide pagination if only one page or no items
        if (totalPages <= 1) {
          paginationContainer.style.display = 'none';
        } else {
          paginationContainer.style.display = 'flex';
        }
      }

      // Category tab click handler
      tabs.forEach(tab => {
        tab.addEventListener('click', () => {
          const selectedCategory = tab.getAttribute('data-category');
          currentCategory = selectedCategory;
          currentPage = 1; // Reset to first page on category change

          // Update active tab styling
          tabs.forEach(t => {
            if (t === tab) {
              t.classList.remove('bg-dark-700', 'text-text-secondary');
              t.classList.add('bg-accent-yellow', 'text-dark-900');
            } else {
              t.classList.remove('bg-accent-yellow', 'text-dark-900');
              t.classList.add('bg-dark-700', 'text-text-secondary');
            }
          });

          updatePagination();
        });
      });

      // Pagination button handlers
      prevBtn.addEventListener('click', () => {
        if (currentPage > 1) {
          currentPage--;
          updatePagination();
        }
      });

      nextBtn.addEventListener('click', () => {
        const totalPages = Math.ceil(filteredItems.length / ITEMS_PER_PAGE);
        if (currentPage < totalPages) {
          currentPage++;
          updatePagination();
        }
      });

      // Initial pagination setup
      updatePagination();
    });
  </script>

</BaseLayout>
