<script>
  // Team category tab switching
  const categoryTabs = document.querySelectorAll('.team-category-tab');
  const tabContents = document.querySelectorAll('.team-tab-content');
  const phdTab = document.getElementById('tab-phd');
  const visitingTab = document.getElementById('tab-visiting');
  const phdContent = document.getElementById('phd-content');
  const visitingContent = document.getElementById('visiting-content');

  // Team member tab functionality
  const memberCards = document.querySelectorAll('.team-member-card');
  const defaultMessage = document.getElementById('default-message');
  const memberDetails = document.querySelectorAll('.member-detail-content');

  function switchCategoryTab(tabName) {
    // Close all mobile details when switching tabs
    document.querySelectorAll('.mobile-member-detail').forEach(detail => {
      detail.classList.add('hidden');
    });
    document.querySelectorAll('.chevron-icon').forEach(icon => {
      icon.style.transform = 'rotate(0deg)';
    });

    if (tabName === 'phd') {
      // Style PhD Students tab as active
      phdTab.classList.add('bg-teal-500', 'text-dark-900', 'shadow-sm');
      phdTab.classList.remove('text-text-muted', 'hover:bg-dark-700/50');

      // Style Visiting tab as inactive
      visitingTab.classList.remove('bg-teal-500', 'text-dark-900', 'shadow-sm');
      visitingTab.classList.add('text-text-muted', 'hover:bg-dark-700/50');

      phdContent.classList.remove('hidden');
      visitingContent.classList.add('hidden');

      // Auto-select first PhD student (desktop only)
      if (!isMobile()) {
        const firstCard = document.querySelector('[data-member-id="1"]');
        if (firstCard) {
          selectMember('1', firstCard);
        }
      }
    } else {
      // Style Visiting Researchers tab as active
      visitingTab.classList.add('bg-teal-500', 'text-dark-900', 'shadow-sm');
      visitingTab.classList.remove('text-text-muted', 'hover:bg-dark-700/50');

      // Style PhD tab as inactive
      phdTab.classList.remove('bg-teal-500', 'text-dark-900', 'shadow-sm');
      phdTab.classList.add('text-text-muted', 'hover:bg-dark-700/50');

      visitingContent.classList.remove('hidden');
      phdContent.classList.add('hidden');

      // Auto-select first visiting researcher (desktop only)
      if (!isMobile()) {
        const firstCard = document.querySelector('[data-member-id="visiting-1"]');
        if (firstCard) {
          selectMember('visiting-1', firstCard);
        }
      }
    }
  }

  function isMobile() {
    return window.innerWidth < 1024; // lg breakpoint
  }

  function selectMember(memberId, card) {
    if (isMobile()) {
      // Mobile accordion behavior
      const mobileDetail = document.querySelector(`[data-mobile-detail-id="${memberId}"]`);
      const chevron = card.querySelector('.chevron-icon');
      const isCurrentlyOpen = !mobileDetail.classList.contains('hidden');

      // Close all mobile details and reset chevrons
      document.querySelectorAll('.mobile-member-detail').forEach(detail => {
        detail.classList.add('hidden');
      });
      document.querySelectorAll('.chevron-icon').forEach(icon => {
        icon.style.transform = 'rotate(0deg)';
      });

      // Remove active state from all cards
      memberCards.forEach(c => {
        c.classList.remove('border-teal-500', 'bg-dark-700');
        c.classList.add('border-dark-500/30', 'bg-dark-700/50');
      });

      // If clicking the same card, just close it
      if (isCurrentlyOpen) {
        return;
      }

      // Add active state to clicked card
      card.classList.remove('border-dark-500/30', 'bg-dark-700/50');
      card.classList.add('border-teal-500', 'bg-dark-700');

      // Rotate chevron and show mobile detail
      if (chevron) {
        chevron.style.transform = 'rotate(180deg)';
      }

      if (mobileDetail) {
        // Get content from desktop detail and populate mobile detail
        const desktopDetail = document.getElementById(`member-detail-${memberId}`);
        if (desktopDetail) {
          mobileDetail.innerHTML = desktopDetail.innerHTML;
        }
        mobileDetail.classList.remove('hidden');
      }
    } else {
      // Desktop panel behavior
      // Remove active state from all cards
      memberCards.forEach(c => {
        c.classList.remove('border-teal-500', 'bg-dark-700');
        c.classList.add('border-dark-500/30', 'bg-dark-700/50');
      });

      // Add active state to selected card
      const selectedCard = document.querySelector(`[data-member-id="${memberId}"]`);
      if (selectedCard) {
        selectedCard.classList.remove('border-dark-500/30', 'bg-dark-700/50');
        selectedCard.classList.add('border-teal-500', 'bg-dark-700');
      }

      // Hide default message
      if (defaultMessage) {
        defaultMessage.classList.add('hidden');
      }

      // Hide all member details
      memberDetails.forEach(detail => {
        detail.classList.add('hidden');
      });

      // Show selected member detail
      const selectedDetail = document.getElementById(`member-detail-${memberId}`);
      if (selectedDetail) {
        selectedDetail.classList.remove('hidden');
      }
    }
  }

  // Tab click handlers
  phdTab.addEventListener('click', () => switchCategoryTab('phd'));
  visitingTab.addEventListener('click', () => switchCategoryTab('visiting'));

  // Member card click handlers
  memberCards.forEach(card => {
    card.addEventListener('click', () => {
      const memberId = card.getAttribute('data-member-id');
      selectMember(memberId, card);
    });
  });

  // Handle window resize to reset state when switching between mobile/desktop
  let wasMobile = isMobile();
  window.addEventListener('resize', () => {
    const nowMobile = isMobile();
    if (wasMobile !== nowMobile) {
      // Close all mobile details when switching layouts
      document.querySelectorAll('.mobile-member-detail').forEach(detail => {
        detail.classList.add('hidden');
      });
      document.querySelectorAll('.chevron-icon').forEach(icon => {
        icon.style.transform = 'rotate(0deg)';
      });
      wasMobile = nowMobile;
    }
  });

  // Automatically display PhD Students tab and first team member on page load
  document.addEventListener('DOMContentLoaded', () => {
    switchCategoryTab('phd');
  });
</script>
